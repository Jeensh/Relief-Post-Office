<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_radius_background"
    android:layout_gravity="center"
    android:paddingHorizontal="50sp"
    android:paddingVertical="10sp"
    tools:context=".guardian.RequestDialog" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10sp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피보호자 등록"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/request_edit"
            android:layout_width="250sp"
            android:layout_height="40sp"
            android:hint="휴대전화번호 입력"
            android:inputType="number"
            android:text=""
            android:paddingLeft="10sp"
            android:layout_marginTop="30sp"
            android:maxLength="11"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:textColorHint="#8E8D8D" />

        <ProgressBar
            android:id="@+id/request_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:max="100"
            android:minWidth="200sp"
            android:minHeight="50sp"
            android:progress="0"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/request_button"
            android:background="@drawable/button_rounded_corner"
            android:backgroundTint="#3f91ff"
            android:text="등록"/>

    </LinearLayout>



</LinearLayout>