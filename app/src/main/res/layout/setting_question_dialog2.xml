<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:layout_gravity="center"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="질문 수정"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <com.seoul42.relief_post_office.record.RecordCountTime
            android:id="@+id/question_setting_time2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/bmjua"
            android:gravity="center"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />

        <com.seoul42.relief_post_office.record.RecordDurationTime
            android:id="@+id/question_duration_time2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="00:00"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10dp"
            android:textSize="30sp"
            android:fontFamily="@font/bmjua"
            android:gravity="center"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="55dp">

        <com.seoul42.relief_post_office.record.EditRecordButton
            android:id="@+id/question_setting_playBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="재생"
            android:textSize="20sp"
            android:fontFamily="@font/jua"
            android:background="@drawable/button_rounded_weak_blue"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/question_record_settingBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="수정"
            android:textSize="20sp"
            android:background="@drawable/button_rounded_weak_blue"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/question_text2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:hint="작성해주세요"
        android:gravity="center"
        android:textSize="20dp"
        android:maxLength="50"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:textColorHint="#8E8D8D"
        tools:ignore="Autofill,HardcodedText,TextFields" />

        <ProgressBar
            android:id="@+id/setting_question_progressbar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"/>

    </FrameLayout>

    <Switch
        android:id="@+id/record_switch2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="녹음 회신"
        android:fontFamily="@font/jua"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/secret_switch2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="비밀"
        android:fontFamily="@font/jua"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="10dp"
        android:background="#999999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_question_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="저장"
            android:textSize="25sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_weak_blue"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/delete_question_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="삭제"
            android:textSize="25sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_weak_blue"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

</LinearLayout>