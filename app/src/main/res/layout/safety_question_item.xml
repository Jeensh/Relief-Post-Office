<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/add_ward_safety_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/question_item_border"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="10">

    <ImageView
        android:id="@+id/safety_question_item_play_button"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/playbtn2" />

    <TextView
        android:id="@+id/safety_question_item_text"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:text="질문"
        android:textSize="25sp"
        android:layout_weight="8"/>

    <Switch
        android:id="@+id/safety_question_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1" />

</LinearLayout>